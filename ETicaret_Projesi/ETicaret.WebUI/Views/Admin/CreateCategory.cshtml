@model CategoryModel

<br />
<h3>Kategori Ekle</h3>
<div class="row">
    <div class="col-md-8">
        <form asp-controller="Admin" asp-action="CreateCategory" method="post">

            <div asp-validation-summary="All" class="text-danger"> </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="Name"></label>
                
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Name" />

                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="Url"></label>

                <div class="col-sm-10">
                    <input class="form-control" asp-for="Url" />

                    <span class="text-danger" asp-validation-for="Url"></span>
                </div>
            </div>
            

            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </div>
        </form>
    </div>
</div>